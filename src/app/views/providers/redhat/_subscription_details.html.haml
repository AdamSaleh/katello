.tree
  %table#redhatSubscriptionTable
    %thead
      %th= _("Name")
      %th= _("Consumed")
      %th= _('Contract')
      %th= _('Support Level')
      %th= _('Arch')
      %th= _('Start Date')
      %th= _('End Date')
    %tbody
      - if @grouped_subscriptions.length > 0
        - @grouped_subscriptions.each do |sub|
          - cycle_class = cycle("ra", "ra.alt")
          %tr{:id => "#{sub.cp_id}", :class => "#{cycle_class}"}
            %td= sub.productName
            %td
              - if sub.quantity < 0
                = _('Unlimited')
              -else
                = "#{sub.consumed} of #{sub.quantity}"
            %td= sub.contractNumber
            %td= sub.supportLevel || ""
            %td= sub.arch || ""
            %td=l sub.startDate
            %td=l sub.endDate
      - else
        %tr
          %td{:colspan=>8} #{_("No subscriptions have been imported.")}
